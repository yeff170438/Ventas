<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Editar Producto</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <style>
    body {
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      font-family: 'Roboto', sans-serif;
      color: #2c3e50;
      padding-top: 40px;
    }

    .form-container {
      background-color: #ffffff;
      border-radius: 15px;
      padding: 30px;
      max-width: 600px;
      margin: auto;
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    h1 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
    }

    label {
      font-weight: 500;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .btn-primary {
      background-color: #1abc9c;
      border: none;
      font-weight: 500;
    }

    .btn-primary:hover {
      background-color: #16a085;
    }

    .btn-volver {
      background-color: #2c3e50;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      font-weight: 500;
    }

    .btn-volver:hover {
      background-color: #1a252f;
    }

    .btn-group {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h1>Editar Producto</h1>

    <form action="/producto/editar_producto/<%= producto.id_producto %>" method="POST">
      <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" class="form-control" value="<%= producto.nombre %>" required />
      </div>

      <div class="form-group">
        <label for="precio_compra">Precio de Compra:</label>
        <input type="number" step="0.01" id="precio_compra" name="precio_compra" class="form-control" value="<%= producto.precio_compra %>" required />
      </div>

      <div class="form-group">
        <label for="precio_venta">Precio de Venta:</label>
        <input type="number" step="0.01" id="precio_venta" name="precio_venta" class="form-control" value="<%= producto.precio_venta %>" required />
      </div>

      <div class="form-group">
        <label for="ganancia">Ganancia:</label>
        <input type="number" step="0.01" id="ganancia" name="ganancia" class="form-control" value="<%= producto.precio_venta - producto.precio_compra %>" readonly />
      </div>

      <div class="form-group">
        <label for="existencia">Existencia:</label>
        <input type="number" step="0.01" id="existencia" name="existencia" class="form-control" value="<%= producto.existencia %>" required />
      </div>

      <div class="form-group">
        <label for="tipo_producto">Tipo de Producto:</label>
        <select id="tipo_producto" name="tipo_producto" class="form-control" required>
          <option value="">-- Seleccionar tipo --</option>
          <% tipos.forEach(function(tipo) { %>
            <option value="<%= tipo %>" <%= tipo === producto.tipo_producto ? 'selected' : '' %>><%= tipo.charAt(0).toUpperCase() + tipo.slice(1) %></option>
          <% }) %>
        </select>
      </div>

      <div class="btn-group">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="/producto" class="btn-volver">Volver</a>
      </div>
    </form>
  </div>

  <script>
    // Calcular ganancia autom√°ticamente
    const precioCompraInput = document.getElementById('precio_compra');
    const precioVentaInput = document.getElementById('precio_venta');
    const gananciaInput = document.getElementById('ganancia');

    function calcularGanancia() {
      const compra = parseFloat(precioCompraInput.value) || 0;
      const venta = parseFloat(precioVentaInput.value) || 0;
      const ganancia = venta - compra;
      gananciaInput.value = ganancia.toFixed(2);
    }

    precioCompraInput.addEventListener('input', calcularGanancia);
    precioVentaInput.addEventListener('input', calcularGanancia);

    calcularGanancia(); // inicial
  </script>

</body>
</html>
